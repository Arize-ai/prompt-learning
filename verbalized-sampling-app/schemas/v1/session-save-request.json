{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://verbalized-sampling.app/schemas/v1/session-save-request.json",
  "title": "Session Save Request",
  "description": "Request schema for saving session with distributions",
  "type": "object",
  "required": [
    "distributions",
    "output_path"
  ],
  "properties": {
    "distributions": {
      "type": "array",
      "description": "Array of distribution objects to save",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["distribution_id", "prompt", "completions", "trace_metadata"],
        "properties": {
          "distribution_id": {
            "type": "string",
            "format": "uuid"
          },
          "prompt": {
            "type": "string"
          },
          "completions": {
            "type": "array"
          },
          "trace_metadata": {
            "type": "object"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    },
    "notes": {
      "type": "string",
      "description": "Optional user notes about this session",
      "maxLength": 10000
    },
    "output_path": {
      "type": "string",
      "description": "Output file path for session (absolute or relative)",
      "minLength": 1
    }
  }
}
