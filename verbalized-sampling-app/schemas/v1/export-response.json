{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://verbalized-sampling.app/schemas/v1/export-response.json",
  "title": "Export Response",
  "description": "Response schema for export operation",
  "type": "object",
  "required": [
    "file_path",
    "row_count",
    "file_size_bytes"
  ],
  "properties": {
    "file_path": {
      "type": "string",
      "description": "Absolute path to exported file"
    },
    "row_count": {
      "type": "integer",
      "description": "Number of rows/entries exported",
      "minimum": 0
    },
    "file_size_bytes": {
      "type": "integer",
      "description": "File size in bytes",
      "minimum": 0
    },
    "format": {
      "type": "string",
      "description": "Export format used",
      "enum": ["csv", "jsonl"]
    },
    "included_metadata": {
      "type": "boolean",
      "description": "Whether metadata was included in export"
    }
  }
}
