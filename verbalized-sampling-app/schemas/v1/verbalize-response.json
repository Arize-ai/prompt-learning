{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://verbalized-sampling.app/schemas/v1/verbalize-response.json",
  "title": "Verbalize Response",
  "description": "Response schema for verbalized sampling distribution",
  "type": "object",
  "required": [
    "distribution_id",
    "completions",
    "trace_metadata",
    "timestamp"
  ],
  "properties": {
    "distribution_id": {
      "type": "string",
      "description": "Unique identifier for this distribution (UUID format)",
      "format": "uuid"
    },
    "completions": {
      "type": "array",
      "description": "Array of weighted completions",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["text", "probability", "rank"],
        "properties": {
          "text": {
            "type": "string",
            "description": "Completion text"
          },
          "probability": {
            "type": "number",
            "description": "Normalized probability (sum of all â‰ˆ 1.0)",
            "minimum": 0.0,
            "maximum": 1.0
          },
          "rank": {
            "type": "integer",
            "description": "Rank by probability (1 = highest)",
            "minimum": 1
          },
          "token_probabilities": {
            "type": "array",
            "description": "Optional token-level probabilities",
            "items": {
              "type": "object",
              "required": ["token", "prob"],
              "properties": {
                "token": {
                  "type": "string"
                },
                "prob": {
                  "type": "number",
                  "minimum": 0.0,
                  "maximum": 1.0
                }
              }
            }
          }
        }
      }
    },
    "trace_metadata": {
      "type": "object",
      "description": "Execution trace metadata for reproducibility",
      "required": ["model", "provider", "api_latency_ms", "token_count"],
      "properties": {
        "model": {
          "type": "string",
          "description": "Model used for generation"
        },
        "provider": {
          "type": "string",
          "description": "Provider used"
        },
        "api_latency_ms": {
          "type": "number",
          "description": "API call latency in milliseconds",
          "minimum": 0
        },
        "token_count": {
          "type": "integer",
          "description": "Total tokens in completions",
          "minimum": 0
        },
        "k": {
          "type": "integer",
          "description": "Number of completions requested"
        },
        "tau": {
          "type": "number",
          "description": "Temperature scaling used"
        },
        "temperature": {
          "type": "number",
          "description": "Sampling temperature used"
        },
        "seed": {
          "type": ["integer", "null"],
          "description": "Random seed used (null if random)"
        },
        "api_version": {
          "type": "string",
          "description": "API version used (e.g., '2023-05-15')"
        }
      }
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp of generation",
      "format": "date-time"
    }
  }
}
